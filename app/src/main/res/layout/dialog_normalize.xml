<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/dialog_horizontal_margin"
        android:paddingTop="@dimen/dialog_vertical_margin"
        android:paddingEnd="@dimen/dialog_horizontal_margin"
        android:paddingBottom="@dimen/dialog_vertical_margin">

        <TextView
            android:id="@+id/dialogNormalizeBeforeTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_dialog_normalize_before_edit" />

        <TextView
            android:id="@+id/dialogNormalizeBeforeTextView"
            style="@android:style/TextAppearance.Holo.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="" />

        <TextView
            android:id="@+id/dialogNormalizeAfterTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_dialog_normalize_after_edit" />

        <TextView
            android:id="@+id/dialogNormalizeAfterTextView"
            style="@android:style/TextAppearance.Holo.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/divider" />

        <CheckBox
            android:id="@+id/dialogNormalizeCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_dialog_normalize_normalize" />

        <CheckBox
            android:id="@+id/dialogNormalizeParenthesesCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_dialog_normalize_remove_parentheses" />

        <CheckBox
            android:id="@+id/dialogNormalizeDashCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_dialog_normalize_remove_dash" />

        <CheckBox
            android:id="@+id/dialogNormalizeInfoCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_dialog_normalize_remove_info" />

        <Button
            android:id="@+id/dialogNormalizeResetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/label_dialog_normalize_reset" />

    </LinearLayout>

</layout>
