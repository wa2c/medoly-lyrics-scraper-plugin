<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/title_preference_category_event">

        <ListPreference
            android:defaultValue="@string/event_get_lyrics_values_default"
            android:entries="@array/event_get_lyrics_entries"
            android:entryValues="@array/event_get_lyrics_values"
            android:key="@string/pref_event_get_lyrics"
            android:summary="@string/pref_summary_event_get_lyrics"
            android:title="@string/pref_title_event_get_lyrics" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_use_cache"
            android:summary="@string/pref_summary_use_cache"
            android:title="@string/pref_title_use_cache" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_cache_result"
            android:summary="@string/pref_summary_cache_result"
            android:title="@string/pref_title_cache_result" />

        <ListPreference
            android:defaultValue="@string/file_name_default_default"
            android:entries="@array/file_name_default_entries"
            android:entryValues="@array/file_name_default_values"
            android:key="@string/pref_file_name_default"
            android:summary="@string/pref_summary_file_name_default"
            android:title="@string/pref_title_file_name_default" />

        <EditTextPreference
            android:defaultValue="@string/file_name_separator_default"
            android:key="@string/pref_file_name_separator"
            android:summary="@string/pref_summary_file_name_separator"
            android:title="@string/pref_title_file_name_separator" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/pref_success_message_show"
            android:summary="@string/pref_summary_post_success_message_show"
            android:title="@string/pref_title_post_success_message_show" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_failure_message_show"
            android:summary="@string/pref_summary_post_failure_message_show"
            android:title="@string/pref_title_post_failure_message_show" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/title_preference_category_info">

        <Preference
            android:key="@string/prefkey_application_details"
            android:summary="@string/pref_summary_application_details"
            android:title="@string/pref_title_application_details" />
        <Preference
            android:key="@string/prefkey_about"
            android:summary="@string/pref_summary_about"
            android:title="@string/pref_title_about" />

    </PreferenceCategory>

</PreferenceScreen>