<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wa2c.android.medoly.plugin.action.lyricsscraper">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:description="@string/app_description"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.SiteActivity"
            android:label="@string/title_activity_site"/>

        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:launchMode="singleTask" />

        <receiver
            android:name=".service.PluginReceiver"
            android:label="@string/class_receiver_label">
            <intent-filter>
                <action android:name="com.wa2c.android.medoly.plugin.action.ACTION_MEDIA" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="com.wa2c.android.medoly.plugin.category.TYPE_GET_LYRICS" />
                <category android:name="com.wa2c.android.medoly.plugin.category.OPERATION_MEDIA_OPEN" />
            </intent-filter>

            <meta-data
                android:name="execute_id_get_lyrics"
                android:value="0" />
            <meta-data
                android:name="execute_label_get_lyrics"
                android:resource="@string/label_execute_get_lyrics" />
            <meta-data
                android:name="execute_icon_get_lyrics"
                android:resource="@drawable/ic_action_download" />
            <meta-data
                android:name="execute_type_get_lyrics"
                android:value="TYPE_GET_LYRICS" />
        </receiver>
        <receiver
            android:name=".util.ToastReceiver"
            android:exported="false" />

        <service
            android:name=".service.ScraperIntentService"
            android:exported="false"/>

        <provider
            android:name=".db.SiteProvider"
            android:authorities="com.wa2c.android.medoly.plugin.action.lyricsscraper.siteprovider"
            android:exported="false" />

    </application>

</manifest>
